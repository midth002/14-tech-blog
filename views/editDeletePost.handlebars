 <section class="hero is-info is-small is-bold">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="title">Edit Post</h1>
            </div>
        </div>
    </section>
 
 <div class="container">
     <section class="articles">
            <div class="column is-8 is-offset-2">
            <div class="card article mt-5">
                    <div class="card-content">
                        <div >
                            <div class="has-text-right">
                             <h4 class="has-text-weight-semibold">Updated on {{formDate editPost.createdAt}}</h4>
                             </div>
                           <div class="m-2">
                               <h4 class="has-text-weight-semibold">Title</h4>
                           </div>
                            <input type="text" class="input is-info" value={{editPost.title}}>
                                <div class="m-2">
                               <h4 class="has-text-weight-semibold">Content</h4>
                           </div>
                            <textarea class="textarea is-info">{{editPost.contents}}</textarea>
                        </div>
                     

                            <div class="update-delete-btns has-text-right mt-5">
                                <button class="button is-info">Update</button>
                                <button class="button is-danger" id="delete-post">Delete</button>
                            </div>
                        </div>
                        </div>

                        <div class="has-text-centered mt-5">
                           <h4 class="has-text-weight-semibold">Comments</h4> 
                        </div>

                        {{#each editPost.comments as |comments| }}
                        <div class="card article mt-5">
                        <div class="comments card-content">
                            <div class="has-text-right">
                                <h4 class="has-text-weight-semibold">Posted by {{user.user_name}} on {{formDate comments.createdAt}}</h4>
                            </div>
                            <div>
                                {{comments.contents}}
                            </div>

                            
                        </div>
                        </div>
                        {{/each}}
</div>
</section>
</div>

                        
<div id="comment-modal" class="modal">
  <div class="modal-background"></div>

  <div class="modal-content">
    <div class="box">
    
      <!-- Your content -->
      <textarea class="textarea is-info" placeholder="Add a comment"></textarea>
      <div class="has-text-right">
        <button class="button is-primary mt-5" id="add-comment">Add Comment</button>
      </div>
    </div>
  </div>     

<script src="/js/modal.js"></script>